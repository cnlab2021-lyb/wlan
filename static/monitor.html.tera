<html>
<head>
    <link rel="stylesheet" href="spectre.min.css">
</head>
<body class="container">
    <div class="columns">
        <div class="column col-mx-auto col-6">
            <h1>Monitor</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>IP Address</th>
                        <th>Packets</th>
                        <th>Bandwidth (B)</th>
                        <th>Block</th>
                    </tr>
                </thead>
                <tbody>
                    {% for record in records %}
                    <tr>
                        <td>{{ record.ip }}</td>
                        <td>{{ record.packets }}</td>
                        <td>{{ record.bytes }}</td>
                        {% if record.blocked %}
                          <td>
                              <form action="unblock/{{ record.ip }}" method="post" style="margin: 0">
                                  <button class="btn">Unblock</a>
                              </form>
                          </td>
                        {% else %}
                          <td>
                              <form action="block/{{ record.ip }}" method="post" style="margin: 0">
                                  <button class="btn">Block</a>
                              </form>
                          </td>
                        {% endif %}
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
